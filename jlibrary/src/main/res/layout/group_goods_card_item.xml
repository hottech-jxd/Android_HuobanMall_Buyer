<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/group_goods_card_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/group_goods_card_goodname"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/group_goods_card_pic"
        android:layout_alignTop="@id/group_goods_card_pic"
        android:textSize="16sp"
        android:maxLines="2"
        android:layout_marginLeft="5dp"
        android:text="阿是打发士大夫撒旦发射撒旦发射发得分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/group_goods_card_price"
        android:layout_alignLeft="@id/group_goods_card_goodname"
        android:layout_below="@id/group_goods_card_goodname"
        android:layout_width="wrap_content"
        android:text="200222\r\n2222"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/group_goods_card_jifen"
        android:layout_alignParentRight="true"
        android:text="0积分"
        android:textColor="@color/black"
        android:layout_alignBottom="@id/group_goods_card_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/group_goods_card_line"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/group_goods_card_pic"
        android:layout_width="match_parent"
        android:background="@color/lightgraywhite"
        android:layout_height="1dp"/>
</RelativeLayout>