<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <solid android:color="@color/white"/>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="0.1dp" android:bottomRightRadius="0.1dp" />
            <stroke android:color="@color/lightgraywhite" android:width="1dp" />
        </shape>
    </item>
    <item  android:bottom="-1dp" android:top="1dp" android:left="1dp" android:right="1dp" >
        <shape>
            <solid android:color="@color/white"/>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="0.1dp" android:bottomRightRadius="0.1dp" />
            <stroke android:color="@color/white" android:width="1dp"/>
        </shape>
    </item>
</layer-list>