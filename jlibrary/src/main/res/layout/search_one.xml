<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_one_rl"
              android:orientation="vertical"
                android:background="@color/orangered"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<EditText
    android:id="@+id/search_one_text"
    android:layout_toLeftOf="@+id/search_one_search"
    android:background="@drawable/oranger_border_style"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:singleLine="true"
    android:hint="商品搜索:请输入商品关键字"
    android:layout_height="wrap_content"/>
    <TextView
        android:text="搜索"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/search_one_search"
        android:layout_alignParentRight="true"
        android:background="@color/orangered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>