<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.partnermall.ui.nativeui.FragMainActivity">

    <RelativeLayout
        android:id="@+id/activity_fragmain_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title_index"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_fragmain_content"
        android:layout_below="@id/activity_fragmain_header"
        android:layout_above="@+id/activity_fragmain_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_fragmain_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
