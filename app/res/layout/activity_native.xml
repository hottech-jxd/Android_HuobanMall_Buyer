<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.partnermall.ui.NativeActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/activity_native_scrollview"
        app:ptrAnimationStyle="flip"
        android:layout_above="@+id/activity_native_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/activity_native_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_native_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
