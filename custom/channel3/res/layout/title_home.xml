<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_title_height"
        android:id="@+id/home_Title"
        android:background="@drawable/home_title_bg">

        <ImageView
            android:id="@+id/scanImage"
            android:layout_width="@dimen/title_back_width"
            android:layout_height="@dimen/title_back_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_scan"
            android:onClick="onClickButton" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/scanImage"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/home_title"
            android:textSize="@dimen/main_title_text_size" />

        <ImageView
            android:id="@+id/loginBtn"
            android:layout_width="@dimen/title_back_width"
            android:layout_height="@dimen/title_back_height"
            android:background="@drawable/home_account"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/title"/>

    </RelativeLayout>

</merge>