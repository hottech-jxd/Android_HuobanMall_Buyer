<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/sis_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_title_bg">
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/header_bar">

    <Button
        android:id="@+id/header_back"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/btn_back"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/header_operate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/header_title"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp"
      />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/search_bar"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.huotu.partnermall.widgets.KJEditText
            android:id="@+id/search_text"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/search"
            android:layout_toLeftOf="@+id/search_cancel"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/search_cancel"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:text="取消"/>
    </RelativeLayout>
</RelativeLayout>
