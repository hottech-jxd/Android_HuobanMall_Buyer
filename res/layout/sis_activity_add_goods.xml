<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.partnermall.ui.sis.AddGoodsActivity">
    <RelativeLayout
        android:id="@+id/sis_addgoods_cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangered">
    </RelativeLayout>
    <!-- 页头 -->
    <RelativeLayout
        android:id="@+id/sis_addgoods_header"
        android:layout_below="@id/sis_addgoods_cd"
        android:layout_width="match_parent"
        android:background="#344324"
        android:layout_height="45dp">

        <Button
            android:id="@+id/sis_addgoods_back"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="返回"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/btn_back"/>
        <TextView
            android:text="市场选货"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sis_addgoods_back"
            android:layout_toLeftOf="@+id/sis_addgoods_query"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sis_addgoods_query"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="搜索"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!-- 搜索框 -->
    <RelativeLayout
        android:id="@+id/sis_addgoods_searchBar"
        android:layout_below="@id/sis_addgoods_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huotu.partnermall.widgets.KJEditText
            android:id="@+id/sis_addgoods_key"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/sis_addgoods_cancel"
            android:drawableLeft="@drawable/index_seach"
            android:singleLine="true"
            android:layout_margin="1dp"
            android:padding="0dp"
            android:hint="请输入商品名称进行搜索"
            android:imeOptions="actionSearch"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sis_addgoods_cancel"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!-- 商品分类1 -->
    <RelativeLayout
        android:id="@+id/sis_addgoods_class1_rl"
        android:layout_below="@id/sis_addgoods_searchBar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:id="@+id/sis_addgoods_rlall"
            android:layout_centerVertical="true"
            android:paddingTop="4dp"
            android:paddingBottom="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sis_addgoods_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:paddingBottom="5dp"
                android:text="全部"
                />
            <TextView
                android:id="@+id/sis_addgoods_footerline"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/sis_addgoods_all"
                android:layout_width="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:text=""
                android:layout_height="2dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/sis_addgoods_select"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:textSize="18sp"
            android:background="@color/white"
            android:src="@drawable/down"/>
        <HorizontalScrollView
        android:id="@+id/sis_addgoods_scrollView"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_toRightOf="@id/sis_addgoods_rlall"
        android:layout_toLeftOf="@id/sis_addgoods_select"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sis_addgoods_class1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
        </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>

    <!--<TextView-->
        <!--android:id="@+id/sis_addgoods_space1"-->
        <!--android:layout_below="@id/sis_addgoods_class1_rl"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="@color/white"-->
        <!--android:layout_height="0dp"/>-->
    <!-- 商品列表 -->
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/sis_addgoods_listview"
        android:layout_below="@id/sis_addgoods_class1_rl"
        pl:ptrAnimationStyle="flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!-- 商品分类2 -->
    <GridView
        android:id="@+id/sis_addgoods_class2"
        android:layout_below="@id/sis_addgoods_class1_rl"
        android:layout_width="match_parent"
        android:background="#e5e5e5"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:numColumns="4"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

</RelativeLayout>
