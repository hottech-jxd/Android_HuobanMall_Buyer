<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    tools:context="com.huotu.partnermall.ui.sis.SelectTempleteActivity">

    <!-- 页头 -->
    <RelativeLayout
        android:id="@+id/sis_selecttemplate_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orangered"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">
        <Button
            android:id="@+id/sis_selecttemplate_back"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/btn_back"/>
        <TextView
            android:id="@+id/sis_selecttemplate_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="确定"/>
        <TextView
            android:id="@+id/sis_selecttempate_title"
            android:text="选择模板"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_toLeftOf="@id/sis_selecttemplate_operate"
            android:layout_toRightOf="@id/sis_selecttemplate_back"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
    android:id="@+id/sis_selecttemplate_show"
    android:layout_below="@id/sis_selecttemplate_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    coverflow:coverHeight="180dp"
    coverflow:coverWidth="120dp"
    coverflow:maxScaleFactor="1.5"
    coverflow:reflectionGap="0px"
    coverflow:rotationThreshold="0.5"
    coverflow:scalingThreshold="0.5"
    coverflow:spacing="0.6"/>

</RelativeLayout>
