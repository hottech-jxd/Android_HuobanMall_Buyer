<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huotu.partnermall.ui.sis.SisLoginActivity">
    <RelativeLayout
        android:id="@+id/title_login"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <include layout="@layout/layout_header" />
    </RelativeLayout>
    <com.huotu.partnermall.widgets.KJEditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:hint="@string/Phone"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        />
    <com.huotu.partnermall.widgets.KJEditText
        android:id="@+id/edtUserName"
        android:hint="@string/UseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        />
    <RelativeLayout
        android:id="@+id/layCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/theme_color"
        >



        <com.huotu.partnermall.widgets.KJEditText
            android:id="@+id/edtCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:hint="@string/Code"
            android:background="@color/white"
            />


        <TextView
            android:id="@+id/btnGetcode"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_code"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="120dp"
            android:onClick="onClickButton"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_marginTop="13dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:background="@color/home_title_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="申请"
        />
    <TextView
        android:id="@+id/tvinfo"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="开店须知"/>

</LinearLayout>
