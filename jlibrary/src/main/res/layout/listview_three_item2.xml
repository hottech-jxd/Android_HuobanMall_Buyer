            android:layout_below="@id/listview_three_item_name3"
            android:layout_toRightOf="@id/listview_three_item_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_jifenPic3"
            android:layout_below="@id/listview_three_item_price3"
            android:layout_alignLeft="@id/listview_three_item_price3"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/listview_three_item_jifen3"
            android:text="积分"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/listview_three_item_jifenPic3"
            android:layout_alignTop="@id/listview_three_item_jifenPic3"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_line3"
            android:layout_below="@id/listview_three_item_pic3"
            android:background="#e5e5e5"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>