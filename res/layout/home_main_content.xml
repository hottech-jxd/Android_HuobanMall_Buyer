<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@color/activity_bg" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/home_radio_button_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabhost_height"
            android:layout_gravity="bottom"
            android:background="@drawable/tabhost_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radioButton_01"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:checked="true"
                android:drawableTop="@drawable/home_tab_main_selector"
                android:visibility="gone"
                android:text="radioButton1"/>

            <RadioButton
                android:id="@+id/radioButton_02"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:drawableTop="@drawable/home_tab_search_selector"
                android:visibility="gone"
                android:text="radioButton2"/>

            <RadioButton
                android:id="@+id/radioButton_03"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:drawableTop="@drawable/home_tab_category_selector"
                android:visibility="gone"
                android:text="radioButton3"/>

            <RadioButton
                android:id="@+id/radioButton_04"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:drawableTop="@drawable/home_tab_cart_selector"
                android:visibility="gone"
                android:text="radioButton4"/>

            <RadioButton
                android:id="@+id/radioButton_05"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:drawableTop="@drawable/home_tab_personal_selector"
                android:visibility="gone"
                android:text="radioButton5"/>
            <RadioButton
                android:id="@+id/radioButton_06"
                style="@style/home_tab_bottom"
                android:background="@drawable/home_tab_background_selector"
                android:drawableTop="@drawable/home_tab_setting_selector"
                android:visibility="gone"
                android:text="radioButton6"/>
        </RadioGroup>
    </LinearLayout>

</TabHost>