<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sis_saledetail_cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangered">
    </RelativeLayout>
    <!-- 页头 -->
    <RelativeLayout
        android:id="@+id/sis_saledetail_header"
        android:layout_below="@id/sis_saledetail_cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangered"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">
        <TextView
            android:id="@+id/sis_saledetail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="＜"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="35sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/sis_saledetail_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text=""/>
        <TextView
            android:id="@+id/sis_saledetail_title"
            android:text="销售明细"
            android:gravity="center"
            android:layout_toLeftOf="@id/sis_saledetail_operate"
            android:layout_toRightOf="@id/sis_saledetail_back"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/sis_saledetail_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.huotu.partnermall.widgets.KJEditText
            android:id="@+id/sis_saledetail_searchtext"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/index_seach"
            android:layout_toLeftOf="@+id/sis_saledetail_searchcancel"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/sis_saledetail_searchcancel"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/sis_saledetail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sis_saledetail_header"
    />

</RelativeLayout>
