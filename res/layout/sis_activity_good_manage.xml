<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/goodmange_cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orangered">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goodmange_header"
        android:layout_below="@id/goodmange_cd"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/layout_header"></include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sis_shop"
        android:layout_below="@id/goodmange_header"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        android:background="@color/home_title_bg"
        android:layout_height="70dp">
        <com.huotu.partnermall.widgets.CircleImageView
            android:id="@+id/sis_logo"
            android:src="@drawable/sis_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/sis_barcode"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:background="@drawable/sis_barcode"
            android:layout_centerVertical="true"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/sis_shopname"
            android:text="店中店"
            android:layout_toRightOf="@id/sis_logo"
            android:layout_toLeftOf="@id/sis_barcode"
            android:layout_alignTop="@id/sis_logo"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sis_shopmanager"
            android:text="店铺管理"
            android:layout_alignLeft="@id/sis_shopname"
            android:layout_below="@id/sis_shopname"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:padding="2dp"
            android:textColor="@color/home_title_bg"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/goodmange_salestatus"
        android:layout_below="@+id/sis_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/salestatus_sale"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="出售中"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/salestatus_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="已下架"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goodmange_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/goodmange_salestatus">
        <TextView
            android:id="@+id/salestatus_sale_line"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/home_title_bg"
            />
        <TextView
            android:id="@+id/salestatus_remove_line"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/white"/>

    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/goodmanage_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/goodmange_line"
        pl:ptrAnimationStyle="flip"
        />

</RelativeLayout>