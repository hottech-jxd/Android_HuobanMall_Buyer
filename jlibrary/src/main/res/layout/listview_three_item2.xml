<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:id="@+id/listview_three_item_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/listview_three_item_rl1"
        android:background="@drawable/gray_border_style"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_pic1"
            android:background="@color/cornflowerblue"
            android:layout_marginRight="4dp"
            android:layout_width="80dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/listview_three_item_name1"
            android:text="此处显示商品名称"
            android:layout_toRightOf="@id/listview_three_item_pic1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_price1"
            android:text="￥200"
            android:layout_below="@id/listview_three_item_name1"
            android:layout_toRightOf="@id/listview_three_item_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_jifenPic1"
            android:layout_below="@id/listview_three_item_price1"
            android:layout_alignLeft="@id/listview_three_item_price1"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_jifen1"
            android:text="积分"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@id/listview_three_item_jifenPic1"
            android:layout_toRightOf="@id/listview_three_item_jifenPic1"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_line1"
            android:layout_below="@id/listview_three_item_pic1"
            android:background="#e5e5e5"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listview_three_item_rl2"
        android:background="@drawable/gray_border_style"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_pic2"
            android:background="@color/pink"
            android:layout_width="80dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/listview_three_item_name2"
            android:text="此处显示商品名称"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/listview_three_item_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_price2"
            android:text="￥200"
            android:layout_below="@id/listview_three_item_name2"
            android:layout_toRightOf="@id/listview_three_item_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_jifenPic2"
            android:layout_below="@id/listview_three_item_price2"
            android:layout_alignLeft="@id/listview_three_item_price2"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/listview_three_item_jifen2"
            android:text="积分"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@id/listview_three_item_jifenPic2"
            android:layout_toRightOf="@id/listview_three_item_jifenPic2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/listview_three_item_line2"
            android:layout_below="@id/listview_three_item_pic2"
            android:background="#e5e5e5"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listview_three_item_rl3"
        android:background="@drawable/gray_border_style"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/listview_three_item_pic3"
            android:background="@color/hotpink"
            android:layout_width="80dp"
            android:layout_height="60dp"/>
