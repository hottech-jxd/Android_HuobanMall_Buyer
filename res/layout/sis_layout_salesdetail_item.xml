<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.huotu.partnermall.widgets.NetworkImageViewCircle
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sis_ddgl_d"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/sis_saledetail_imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:textColor="@color/black"
        android:layout_alignTop="@+id/sis_saledetail_imageView"
        android:layout_toRightOf="@+id/sis_saledetail_imageView"
        android:id="@+id/sis_saledetail_order" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/sis_saledetail_order"
        android:layout_toLeftOf="@+id/sis_saledetail_money"
        android:layout_toRightOf="@+id/sis_saledetail_order"
        android:id="@+id/sis_saledetail_orderNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/sis_saledetail_salestime"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/sis_saledetail_imageView"
        android:layout_alignLeft="@+id/sis_saledetail_order"
        android:layout_alignStart="@+id/sis_saledetail_order" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:textColor="#FE3C00"
        android:layout_marginRight="20dp"
        android:id="@+id/sis_saledetail_money"
        android:layout_alignTop="@+id/sis_saledetail_orderNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费额(元)"
        android:id="@+id/pay"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/sis_saledetail_salestime"
        android:layout_alignRight="@+id/sis_saledetail_money"
        android:layout_alignEnd="@+id/sis_saledetail_money" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/sis_saledetail_imageView"/>

</RelativeLayout>