<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/goodmange_header"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/layout_header"></include>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/goodmange_salestatus"
        android:layout_below="@+id/goodmange_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/salestatus_sale"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="出售中"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/salestatus_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="已下架"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goodmange_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/goodmange_salestatus">
        <TextView
            android:id="@+id/salestatus_sale_line"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/home_title_bg"
            />
        <TextView
            android:id="@+id/salestatus_remove_line"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/white"/>

    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/goodmanage_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goodmange_line"
        android:layout_above="@+id/goodsedit_bottom"
        />
    <RelativeLayout
        android:id="@+id/goodsedit_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/addgood_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:onClick="onClickButton"
            android:text="添加商品"
            android:background="@color/home_title_bg"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="40dp"/>
</RelativeLayout>
</RelativeLayout>