<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shop_default_bg"
            android:background="@color/shopdefaultbg"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
        <RelativeLayout
        android:id="@+id/shop_default_bar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_alignBottom="@id/shop_default_bg"
        android:layout_marginBottom="0dp"
        android:layout_height="60dp">
        </RelativeLayout>
        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/shop_default_avorator"
        android:background="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/shop_default_bar"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
        <TextView
        android:text="霏澜小店"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_above="@id/shop_default_bar"
        android:layout_alignTop="@id/shop_default_avorator"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/shop_default_avorator"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/shop_default_shopname"
        android:layout_height="wrap_content"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_alignTop="@id/shop_default_bar"
            android:id="@+id/shop_default_item"
            android:background="@color/white"
            android:layout_toRightOf="@id/shop_default_avorator"
            android:layout_width="match_parent"
            app:divider="@drawable/divider_style"
            app:showDividers="middle"
            app:dividerPadding="10dp"
            android:layout_height="60dp">
            <LinearLayout
                android:id="@+id/shop_default_ll1"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shop_default_goodscount"
                    android:text="123456"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
                <TextView
                    android:text="全部商品"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shop_default_ll2"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shop_default_newgoodscount"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="123456"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
                <TextView
                    android:text="上新商品"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shop_default_ll3"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shop_default_order"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="@string/fa_file_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
                <TextView
                    android:text="我的订单"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    <TextView
        android:layout_below="@id/shop_default_bar"
        android:background="@color/lightgraywhite"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>