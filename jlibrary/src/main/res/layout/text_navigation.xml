<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/text_navigation_rl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/text_navigation_rl2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_navigation_title"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/text_navigation_right_arrow"
        android:singleLine="true"
        android:text="asfdsaffsdfsdfsafsdfdddddddddddddddddddddddsssssssssssssssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/text_navigation_right_arrow"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text="@string/fa_chevron_right"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/gray"
        android:layout_height="wrap_content"/>

        <TextView
            android:background="#e5e5e5"
            android:id="@+id/text_navigation_line"
            android:layout_below="@id/text_navigation_title"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="1dp"/>
    </RelativeLayout>

</RelativeLayout>