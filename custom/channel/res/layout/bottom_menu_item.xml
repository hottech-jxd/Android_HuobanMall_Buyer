<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenuItem"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/main_title_height"
    android:clickable="true"
    android:gravity="center_vertical"
    android:onClick="onClick"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mainMenuIcon"
        android:layout_width="@dimen/sideslip_menu_icon_width"
        android:layout_height="@dimen/sideslip_menu_icon_height"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/mainMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainMenuIcon"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:textSize="@dimen/normal_label"
        android:textColor="@color/sideslip_menu_text_color"/>
</RelativeLayout>