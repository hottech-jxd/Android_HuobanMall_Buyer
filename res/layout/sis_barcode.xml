<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/sis_barcode_ll"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sis_barcode_logo"
        android:background="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/sis_barcode_pic"
        android:layout_below="@id/sis_barcode_ll"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/sis_barcode_pic"
        android:id="@+id/sis_barcode_share"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sis_barcode_share_wx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_wechat"/>
        <ImageView
            android:id="@+id/sis_barcode_share_wxpyq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_wechatmoments"/>
        <ImageView
            android:id="@+id/sis_barcode_share_qqzone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/logo_qzone"/>

    </LinearLayout>
    <TextView
        android:id="@+id/sis_barcode_desc"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textSize="17sp"
        android:layout_below="@id/sis_barcode_share"
        android:text="扫一扫上面的二维码图案,有惊喜"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"/>
</RelativeLayout>